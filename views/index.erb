  <!-- Hangman Drawing -->
  <%= @ascii %>

  <!-- Word Display -->
  <p style="font-size: 1.5em;">
    <% session[:word].chars.each do |c| %>
      <% if session[:guesses].include?(c) %>
        <%= c %>
      <% else %>
        _ 
      <% end %>
    <% end %>
  </p>

  <!-- Guess Form -->
  <% unless @game_won || @game_lost %>
    <form action="/guess" method="POST">
      <input type="text" name="letter" maxlength="1" required>
      <button type="submit">ðŸ”  Guess</button>
    </form>
  <% end %>

  <!-- Hint Section -->
  <% unless @game_won || @game_lost %>
    <form action="/hint" method="POST">
      <button type="submit">ðŸ’¡ Hint</button>
    </form>
  <% end %>

  <!-- Display Hint -->
  <% if session[:hint] %>
    <p id="hint-text">ðŸ’¡ Hint: <%= session[:hint] %></p>
  <% end %>

  <!-- Sarcastic Remark -->
  <% if @sarcasm %>
    <p style="color: red;">ðŸ’¬ <%= @sarcasm %></p>
  <% end %>

  <!-- Result Messages -->
  <% if defined?(@game) && @game && @game.won? %>
  <p style="color: green;"><strong>ðŸŽ‰ Congratulations! You won!</strong></p>
  <script>playWinSound();</script>
<% elsif defined?(@game) && @game && @game.lost? %>
